<Page x:Class="a_level_project.WorkspacePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:a_level_project"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="WorkspacePage">

    <Canvas
        x:Name="WorkspaceCanvas"
        Background="LightGray"
        MouseLeftButtonDown="WorkspaceCanvas_OnMouseLeftButtonDown"
        TouchDown="WorkspaceCanvas_OnTouchDown"
        MouseWheel="WorkspaceCanvas_OnMouseWheel"
        MouseRightButtonDown="WorkspaceCanvas_OnMouseRightButtonDown"
        MouseRightButtonUp="WorkspaceCanvas_OnMouseRightButtonUp"
        MouseMove="WorkspaceCanvas_OnMouseMove">

        <Viewbox
            x:Name="TreeViewbox"
            Stretch="Fill"
            Height="600"
            Width="1000"
            Panel.ZIndex="5">
            <Canvas
                x:Name="TreeViewboxCanvas"
                Height="600"
                Width="1000">
                
            </Canvas>
        </Viewbox>

        <StackPanel
            x:Name="ToolboxStackPanel"
            Canvas.Left="200"
            Canvas.Bottom="0"
            Width="600"
            Height="40"
            Margin="0, 10"
            Orientation="Horizontal"
            Background="White"
            Panel.ZIndex="10">

            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#00000000" />
                </Style>
            </StackPanel.Resources>

            <Button
                x:Name="NodeShapeButton"
                Width="40"
                Click="NodeShapeButton_OnClick">
                <TextBlock TextWrapping="Wrap"> Node Shape </TextBlock>
            </Button>

            <Button
                x:Name="NodeFillColourButton"
                Width="40"
                Click="NodeFillColourButton_OnClick">
                <TextBlock TextWrapping="Wrap" FontSize="10"> Node Fill Colour </TextBlock>
            </Button>

            <Button
                x:Name="NodeOutlineColourButton"
                Width="40"
                Click="NodeOutlineColourButton_OnClick">
                <TextBlock TextWrapping="Wrap" FontSize="10"> Node Outline Colour </TextBlock>
            </Button>

            <Button
                x:Name="NodeEdgeWeightButton"
                Width="40"
                Click="NodeEdgeWeightButton_Click">
                <TextBlock TextWrapping="Wrap" FontSize="10"> Node Edge Weight </TextBlock>
            </Button>

            <Button
                x:Name="NodeFontFamilyButton"
                Width="80"
                Click="NodeFontFamilyButton_OnClick">
                <TextBlock TextWrapping="Wrap"> Node Font Family </TextBlock>
            </Button>

            <Button
                x:Name="NodeFontSizeButton"
                Width="80"
                Click="NodeFontSizeButton_OnClick">
                <TextBlock TextWrapping="Wrap"> Node Font Size </TextBlock>
            </Button>

            <Button
                x:Name="NodeTextColourButton"
                Width="40"
                Click="NodeTextColourButton_OnClick">
                <TextBlock TextWrapping="Wrap" FontSize="10"> Node Text Colour </TextBlock>
            </Button>

            <Button
                x:Name="EmboldenButton"
                Width="40"
                Click="EmboldenButton_OnClick">
                <TextBlock TextWrapping="Wrap"> Embolden </TextBlock>
            </Button>

            <Button
                x:Name="UnderlineButton"
                Width="40"
                Click="UnderlineButton_OnClick">
                <TextBlock TextWrapping="Wrap"> Underline </TextBlock>
            </Button>

            <Button
                x:Name="ItaliciseButton"
                Width="40"
                Click="ItaliciseButton_OnClick">
                <TextBlock TextWrapping="Wrap"> Italicise </TextBlock>
            </Button>

            <Button
                x:Name="HighlightButton"
                Width="40"
                Click="HighlightButton_OnClick">
                <TextBlock TextWrapping="Wrap"> Highlight </TextBlock>
            </Button>

            <Button
                x:Name="AddNodeButton"
                Width="40"
                Click="AddNodeButton_OnClick">
                <TextBlock TextWrapping="Wrap"> Add Node </TextBlock>
            </Button>

            <Button
                x:Name="DeleteNodeButton"
                Width="40"
                Click="DeleteNodeButton_OnClick">
                <TextBlock TextWrapping="Wrap"> Delete Node </TextBlock>
            </Button>
        </StackPanel>
        
        <Grid
            x:Name="ColourPalette"
            Width="140"
            Height="140"
            Background="White"
            Visibility="Hidden"
            Panel.ZIndex="10">

            <Grid.Resources>
                <Style TargetType="Rectangle">
                    <Setter Property="Margin" Value="2" />
                    <Setter Property="Stroke" Value="Black" />
                    <Setter Property="StrokeThickness" Value="0.5" />
                    <EventSetter Event="MouseEnter" Handler="ColourPaletteRectangle_OnMouseEnter" />
                    <EventSetter Event="MouseLeave" Handler="ColourPaletteRectangle_OnMouseLeave" />
                    <EventSetter Event="MouseLeftButtonDown" Handler="ColourPaletteRectangle_OnMouseLeftButtonDown" />
                    <EventSetter Event="TouchDown" Handler="ColourPaletteRectangle_OnTouchDown" />
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Rectangle Grid.Column="0" Grid.Row="0" Fill="LightCoral" />
            <Rectangle Grid.Column="1" Grid.Row="0" Fill="Red" />
            <Rectangle Grid.Column="2" Grid.Row="0" Fill="Brown" />
            <Rectangle Grid.Column="3" Grid.Row="0" Fill="Firebrick" />
            <Rectangle Grid.Column="4" Grid.Row="0" Fill="DarkRed" />
            <Rectangle Grid.Column="5" Grid.Row="0" Fill="PaleTurquoise" />
            <Rectangle Grid.Column="6" Grid.Row="0" Fill="Cyan" />
            <Rectangle Grid.Column="0" Grid.Row="1" Fill="RoyalBlue" />
            <Rectangle Grid.Column="1" Grid.Row="1" Fill="Blue" />
            <Rectangle Grid.Column="2" Grid.Row="1" Fill="DarkBlue" />
            <Rectangle Grid.Column="3" Grid.Row="1" Fill="Navy" />
            <Rectangle Grid.Column="4" Grid.Row="1" Fill="LightGoldenrodYellow" />
            <Rectangle Grid.Column="5" Grid.Row="1" Fill="Yellow" />
            <Rectangle Grid.Column="6" Grid.Row="1" Fill="SandyBrown" />
            <Rectangle Grid.Column="0" Grid.Row="2" Fill="Orange" />
            <Rectangle Grid.Column="1" Grid.Row="2" Fill="Sienna" />
            <Rectangle Grid.Column="2" Grid.Row="2" Fill="Olive" />
            <Rectangle Grid.Column="3" Grid.Row="2" Fill="MediumSlateBlue" />
            <Rectangle Grid.Column="4" Grid.Row="2" Fill="SlateBlue" />
            <Rectangle Grid.Column="5" Grid.Row="2" Fill="RoyalBlue" />
            <Rectangle Grid.Column="6" Grid.Row="2" Fill="MidnightBlue" />
            <Rectangle Grid.Column="0" Grid.Row="3" Fill="Purple" />
            <Rectangle Grid.Column="1" Grid.Row="3" Fill="Indigo" />
            <Rectangle Grid.Column="2" Grid.Row="3" Fill="PaleGreen" />
            <Rectangle Grid.Column="3" Grid.Row="3" Fill="GreenYellow" />
            <Rectangle Grid.Column="4" Grid.Row="3" Fill="Chartreuse" />
            <Rectangle Grid.Column="5" Grid.Row="3" Fill="SpringGreen" />
            <Rectangle Grid.Column="6" Grid.Row="3" Fill="MediumSpringGreen" />
            <Rectangle Grid.Column="0" Grid.Row="4" Fill="DarkKhaki" />
            <Rectangle Grid.Column="1" Grid.Row="4" Fill="Plum" />
            <Rectangle Grid.Column="2" Grid.Row="4" Fill="LightPink" />
            <Rectangle Grid.Column="3" Grid.Row="4" Fill="Magenta" />
            <Rectangle Grid.Column="4" Grid.Row="4" Fill="DeepPink" />
            <Rectangle Grid.Column="5" Grid.Row="4" Fill="LightSlateGray" />
            <Rectangle Grid.Column="6" Grid.Row="4" Fill="Maroon" />
            <Rectangle Grid.Column="0" Grid.Row="5" Fill="DarkOrange" />
            <Rectangle Grid.Column="1" Grid.Row="5" Fill="Green" />
            <Rectangle Grid.Column="2" Grid.Row="5" Fill="ForestGreen" />
            <Rectangle Grid.Column="3" Grid.Row="5" Fill="DarkSeaGreen" />
            <Rectangle Grid.Column="4" Grid.Row="5" Fill="CadetBlue" />
            <Rectangle Grid.Column="5" Grid.Row="5" Fill="SteelBlue" />
            <Rectangle Grid.Column="6" Grid.Row="5" Fill="DarkGreen" />
            <Rectangle Grid.Column="0" Grid.Row="6" Fill="SlateBlue" />
            <Rectangle Grid.Column="1" Grid.Row="6" Fill="DarkMagenta" />
            <Rectangle Grid.Column="2" Grid.Row="6" Fill="Black" />
            <Rectangle Grid.Column="3" Grid.Row="6" Fill="Gray" />
            <Rectangle Grid.Column="4" Grid.Row="6" Fill="LightGray" />
            <Rectangle Grid.Column="5" Grid.Row="6" Fill="White" />
            <Rectangle Grid.Column="6" Grid.Row="6">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="Images/red_diagonal_cross.png" />
                </Rectangle.Fill>
            </Rectangle>
        </Grid>

        <StackPanel
            x:Name="ZoomStackPanel"
            Canvas.Right="0"
            Canvas.Bottom="0"
            Margin="10, 10"
            Width="40"
            Height="80"
            Panel.ZIndex="10">

            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="White" />
                </Style>
            </StackPanel.Resources>

            <Button
                x:Name="ZoomInButton"
                Height="40"
                Click="ZoomInButton_OnClick">
                <TextBlock TextWrapping="Wrap"> Zoom In </TextBlock>
            </Button>

            <Button
                x:Name="ZoomOutButton"
                Height="40"
                Click="ZoomOutButton_OnClick">
                <TextBlock TextWrapping="Wrap"> Zoom Out</TextBlock>
            </Button>
        </StackPanel>

        <StackPanel
            x:Name="SaveAndConvertStackPanel"
            Canvas.Left="0"
            Canvas.Bottom="0"
            Width="100"
            Height="40"
            Margin="10, 10"
            Orientation="Horizontal"
            Panel.ZIndex="10">

            <Button
                x:Name="SaveButton"
                Width="40"
                Height="40"
                Background="SkyBlue"
                Click="SaveButton_OnClick">
                <TextBlock TextWrapping="Wrap" FontSize="10"> Save Project</TextBlock>
            </Button>

            <Button
                x:Name="ConvertButton"
                Width="40"
                Height="40"
                Margin="20, 0"
                Background="Orange">
                <TextBlock TextWrapping="Wrap" FontSize="10"> Convert to PDF</TextBlock>
            </Button>
        </StackPanel>

        <TextBox
            x:Name="ProjectNameTextBox"
            Width="240"
            Height="20"
            Margin="10, 10"
            BorderThickness="0"
            Background="Transparent"
            FontSize="15"
            Panel.ZIndex="10"
            MaxLength="30">
            Placeholder Project Name
        </TextBox>

        <Button
            x:Name="BackToMenuButton"
            Canvas.Right="0"
            Margin="10, 10"
            Width="40"
            Height="40"
            Background="AliceBlue"
            Panel.ZIndex="10"
            Click="BackToMenuButton_OnClick">
            <TextBlock TextWrapping="Wrap" FontSize="10"> Back To Menu </TextBlock>
        </Button>

        <ScrollViewer
            x:Name="FontFamilyScrollViewer"
            Width="80"
            Height="120"
            Canvas.Bottom="50"
            Canvas.Left="360"
            Background="White"
            Panel.ZIndex="10"
            Visibility="Hidden">

            <StackPanel
                x:Name="FontFamilyScrollViewerStackPanel">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Height" Value="20" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <EventSetter Event="Click" Handler="FontFamilyScrollViewerStackPanelButton_OnClick" />
                    </Style>
                </StackPanel.Resources>

                <Button FontFamily="Arial">Arial</Button>
                <Button FontFamily="Arial Black" FontSize="10">Arial Black</Button>
                <Button FontFamily="Arial Unicode MS" FontSize="7">Arial Unicode MS</Button>
                <Button FontFamily="Calibri">Calibri</Button>
                <Button FontFamily="Cambri">Cambria</Button>
                <Button FontFamily="Comic Sans MS" FontSize="8">Comic Sans MS</Button>
                <Button FontFamily="Candara">Candara</Button>
                <Button FontFamily="Consolas">Consolas</Button>
                <Button FontFamily="Constantia">Constantia</Button>
                <Button FontFamily="Corbel">Corbel</Button>
                <Button FontFamily="Courier New" FontSize="9">Courier New</Button>
                <Button FontFamily="Georgia">Georgia</Button>
                <Button FontFamily="Lucida Sans Unicode" FontSize="6">Lucida Sans Unicode</Button>
                <Button FontFamily="Tahoma">Tahoma</Button>
                <Button FontFamily="Times New Roman" FontSize="7">Times New Roman</Button>
                <Button FontFamily="Trebuchet MS" FontSize="10">Trebuchet MS</Button>
                <Button FontFamily="Verdana">Verdana</Button>
            </StackPanel>
        </ScrollViewer>

        <ScrollViewer
            x:Name="FontSizeScrollViewer"
            Width="80"
            Height="120"
            Canvas.Bottom="50"
            Canvas.Left="440"
            Background="White"
            Panel.ZIndex="10"
            Visibility="Hidden">

            <StackPanel
                x:Name="FontSizeScrollViewerStackPanel">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Height" Value="15" />
                        <Setter Property="FontSize" Value="10" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <EventSetter Event="Click" Handler="FontSizeScrollViewerStackPanelButton_OnClick" />
                    </Style>
                </StackPanel.Resources>

                <Button>1</Button>
                <Button>2</Button>
                <Button>3</Button>
                <Button>4</Button>
                <Button>5</Button>
                <Button>6</Button>
                <Button>7</Button>
                <Button>8</Button>
                <Button>9</Button>
                <Button>10</Button>
                <Button>11</Button>
                <Button>12</Button>
                <Button>14</Button>
                <Button>16</Button>
                <Button>18</Button>
                <Button>20</Button>
                <Button>22</Button>
                <Button>24</Button>
                <Button>26</Button>
                <Button>28</Button>
                <Button>36</Button>
                <Button>48</Button>
                <Button>72</Button>
            </StackPanel>
        </ScrollViewer>

        <StackPanel
            x:Name="EdgeWeightStackPanel"
            Width="40"
            Height="80"
            Canvas.Bottom="50"
            Canvas.Left="320"
            Background="White"
            Panel.ZIndex="10"
            Visibility="Hidden">

            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Height" Value="20" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="FontSize" Value="12" />
                    <EventSetter Event="Click" Handler="EdgeWeightStackPanelButton_OnClick" />
                </Style>
            </StackPanel.Resources>

            <Button>1</Button>
            <Button>2</Button>
            <Button>3</Button>
            <Button>4</Button>
        </StackPanel>

        <StackPanel
            x:Name="ShapeStackPanel"
            Orientation="Horizontal"
            Width="80"
            Height="40"
            Canvas.Bottom="50"
            Canvas.Left="180"
            Visibility="Hidden">

            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="40" />
                    <Setter Property="BorderThickness" Value="0" />
                    <EventSetter Event="Click" Handler="ShapeStackPanelButton_OnClick" />
                </Style>
            </StackPanel.Resources>

            <Button
                x:Name="RectangleButton">
                <Button.Background>
                    <ImageBrush ImageSource="Images/rectangle_outline.png" />
                </Button.Background>
            </Button>

            <Button
                x:Name="CircleButton">
                <Button.Background>
                    <ImageBrush ImageSource="Images/circle_outline.png" />
                </Button.Background>
            </Button>
        </StackPanel>

        <TextBox
            x:Name="NodeRadiusSizeTextBox"
            Height="30"
            Width="80"
            Canvas.Bottom="10"
            Canvas.Right="85"
            BorderThickness="0"
            MaxLength="5"
            FontSize="20"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            Panel.ZIndex="10"
            Background="Transparent"
            KeyDown="NodeRadiusSizeTextBox_OnKeyDown">
            100
        </TextBox>

        <TextBlock
            x:Name="NodeRadiusSizeTextBlock"
            Width="100"
            Height="15"
            Canvas.Bottom="40"
            Canvas.Right="75"
            FontSize="12"
            TextAlignment="Center"
            FontWeight="Bold"
            Panel.ZIndex="10">
            Node Radius Size
        </TextBlock>

        <TextBox
            x:Name="NodeSizeTextBox"
            Height="30"
            Width="80"
            Canvas.Bottom="55"
            Canvas.Right="85"
            BorderThickness="0"
            MaxLength="5"
            FontSize="20"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            Panel.ZIndex="10"
            Background="Transparent"
            KeyDown="NodeSizeTextBox_OnKeyDown">
            70
        </TextBox>

        <TextBlock
            x:Name="NodeSizeTextBlock"
            Width="100"
            Height="15"
            Canvas.Bottom="85"
            Canvas.Right="75"
            FontSize="12"
            TextAlignment="Center"
            FontWeight="Bold"
            Panel.ZIndex="10">
            Node Size
        </TextBlock>
    </Canvas>
</Page>
