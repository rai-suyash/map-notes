<Page x:Class="a_level_project.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:a_level_project"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="MenuPage">

    <Canvas
        x:Name="MenuCanvas"
        Background="LightGray">

        <Grid
            x:Name="MenuTopBarGrid"
            Background="White"
            Width="1000"
            Height="40"
            Panel.ZIndex="10">

            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Grid.ColumnSpan" Value="1" />
                    <Setter Property="Grid.RowSpan" Value="3" />
                    <Setter Property="Margin" Value="5, 5" />
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBox
                x:Name="MenuSearchBar"
                MaxLength="30"
                Grid.Column="1"
                Grid.Row="1"
                Grid.ColumnSpan="8"
                Grid.RowSpan="1"
                Background="LightGray"
                BorderThickness="0"
                FontSize="16"
                KeyDown="MenuSearchBar_OnKeyDown">
                Type project name here
            </TextBox>

            <Button
                x:Name="CreateNewMindMapButton"
                BorderThickness="0"
                Grid.Column="19"
                Grid.ColumnSpan="5"
                Click="CreateNewMindMapButton_OnClick">
                Click to create new mind map
            </Button>
        </Grid>

        <ScrollViewer
            x:Name="MenuScrollViewer"
            Width="1000"
            Height="560"
            Canvas.Top="40"
            Panel.ZIndex="5">

            <StackPanel
                x:Name="MenuScrollViewerStackPanel">

            </StackPanel>
        </ScrollViewer>
    </Canvas>
</Page>
